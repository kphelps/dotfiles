! Set the curser size
Xcursor.size:  48

! Set the dpi, and other font stuff
Xft.dpi:        165
Xft.autohint:   0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintslight
Xft.hinting:    1
Xft.antialias:  1

! hard contrast: *background: #1d2021
*background: #282828
! soft contrast: *background: #32302f
*foreground: #ebdbb2
! Black + DarkGrey
*color0:  #282828
*color8:  #928374
! DarkRed + Red
*color1:  #cc241d
*color9:  #fb4934
! DarkGreen + Green
*color2:  #98971a
*color10: #b8bb26
! DarkYellow + Yellow
*color3:  #d79921
*color11: #fabd2f
! DarkBlue + Blue
*color4:  #458588
*color12: #83a598
! DarkMagenta + Magenta
*color5:  #b16286
*color13: #d3869b
! DarkCyan + Cyan
*color6:  #689d6a
*color14: #8ec07c
! LightGrey + White
*color7:  #a89984
*color15: #ebdbb2

!!!!!!!
! Rofi
!!!!!!!

! Window opacity
rofi.opacity:                        100
! Window width
rofi.width:                          40
! Number of lines
rofi.lines:                          10
! Number of columns
rofi.columns:                        1
! Font to use
rofi.font:                           Hack 15


rofi.color-enabled: true
rofi.separator-style: solid

rofi.color-window: #282828, #ebdbb2, #ebdbb2
rofi.color-normal: #282828, #ebdbb2, #282828, #ebdbb2, #282828
rofi.color-active: #282828, #fabd2f, #282828, #fabd2f, #282828
rofi.color-urgent: #282828, #fb4934, #282828, #fb4934, #282828
